{
  "name": "tailwindcss-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "npm-run-all --parallel start:css start:js",
    "start:css": "postcss tailwind/index.css -o src/index.css --env development -w",
    "start:js": "react-scripts start",
    "build": "npm-run-all build:css build:js",
    "build:css": "postcss tailwind/index.css -o src/index.css --env production",
    "build:js": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "types": "npx ts-typie"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@tailwindcss/ui": "^0.1.3",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/user-event": "^10.0.1",
    "@types/cssnano": "^4.0.0",
    "@types/postcss-import": "^12.0.0",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "tailwindcss": "^1.2.0",
    "typescript": "^3.8.3"
  }
}
